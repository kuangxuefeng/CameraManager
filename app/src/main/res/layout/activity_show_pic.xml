<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.kxf.cameramanager.ShowPicActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_center"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:background="@drawable/shape_et_bg_null"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_left2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/iv_left1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_right1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/iv_right2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/user_del_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerInParent="true" />
                <Button
                    android:id="@+id/btn_last"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_to_left"
                    android:layout_toLeftOf="@+id/btn_delete"
                    android:layout_centerVertical="true" />
                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_to_right"
                    android:layout_toRightOf="@+id/btn_delete"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_center_r"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:background="@drawable/shape_et_bg_null"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_left2_r"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/iv_left1_r"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_right1_r"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/iv_right2_r"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_et_bg_null"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_delete_r"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/user_del_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerInParent="true" />
                <Button
                    android:id="@+id/btn_last_r"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_to_left"
                    android:layout_toLeftOf="@+id/btn_delete_r"
                    android:layout_centerVertical="true" />
                <Button
                    android:id="@+id/btn_next_r"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_to_right"
                    android:layout_toRightOf="@+id/btn_delete_r"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_out"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            style="@style/MyButton"
            android:text="导出"/>
        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/MyButton"
            android:layout_marginBottom="10dp"
            android:text="返回"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/load_pb"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true" />
</RelativeLayout>
